@{
    ViewData["Title"] = "Bölüm Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<AcademicAppointmentAdminMvc.MvcProject.Dtos.DepartmentDtos.GetDepartmentDto>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Bölüm Listesi</h2>
    <a asp-action="AddDepartment" asp-route-schoolId="@Model.FirstOrDefault()?.SchoolId" class="btn btn-success">Yeni Bölüm Ekle</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Okul</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>@department.SchoolName</td>
                <td>
                    <a asp-action="GetCoursesByDepartment" asp-route-departmentId="@department.Id" class="btn btn-sm btn-info">Dersleri Gör</a>
                    <a asp-action="UpdateDepartment" asp-route-id="@department.Id" class="btn btn-sm btn-warning">Güncelle</a>
                    <a asp-action="DeleteDepartment" asp-route-id="@department.Id" asp-route-schoolId="@department.SchoolId" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
