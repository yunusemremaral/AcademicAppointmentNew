@model DepartmentUpdateDto

@{
    ViewData["Title"] = "Bölüm Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Bölüm Düzenle</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Bölüm Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SchoolId" class="form-label">Bağlı Olduğu Okul</label>
            <select asp-for="SchoolId" asp-items="@ViewBag.Schools" class="form-select">
                <option value="">Lütfen okul seçiniz</option>
            </select>
            <span asp-validation-for="SchoolId" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}