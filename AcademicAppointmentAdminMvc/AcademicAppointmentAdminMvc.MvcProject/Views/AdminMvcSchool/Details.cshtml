@model SchoolDetailDto

@{
    ViewData["Title"] = "Okul Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <!-- Okul Başlığı ve ID'si -->
    <div class="d-flex justify-content-between">
        <h2>@Model.Name - Detaylar</h2>
        <p><strong>Okul ID:</strong> @Model.Id</p>
    </div>

    <p class="lead">Okul ve bağlı olduğu bölümler hakkında detaylı bilgiler:</p>

    <!-- Bölümler Tablosu -->
    @if (Model.Departments != null && Model.Departments.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Bölüm Adı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model.Departments)
                {
                    <tr>
                        <td>@department.Id</td>
                        <td>@department.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Bu okulda henüz bölüm bulunmamaktadır.</p>
    }

    <!-- Butonlar: Bölüm Ekle ve Geri Dön -->
    <div class="d-flex justify-content-between mt-3">
        <a href="@Url.Action("Create", "AdminMvcDepartment", new { schoolId = Model.Id })" class="btn btn-success btn-sm">
            <i class="fas fa-plus-circle"></i> Bölüm Ekle
        </a>

        <a href="@Url.Action("Index", "AdminMvcSchool")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>
