
@{
    ViewData["Title"] = "Bölüm Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model SchoolWithDepartmentsDto

<h3>@Model.Name Bölümleri</h3>
<p><strong>Toplam Bölüm Sayısı:</strong> @Model.Departments?.Count ?? 0</p>

<a href="/AdminDepartment/AddDepartment?schoolId=@Model.Id" class="btn btn-success mb-3">
    Yeni Bölüm Ekle
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Bölüm Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model.Departments)
        {
            <tr>
                <td>@dept.Id</td>
                <td>@dept.Name</td>
                <td>
                    <a href="/AdminDepartment/Edit/@dept.Id" class="btn btn-sm btn-warning">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
