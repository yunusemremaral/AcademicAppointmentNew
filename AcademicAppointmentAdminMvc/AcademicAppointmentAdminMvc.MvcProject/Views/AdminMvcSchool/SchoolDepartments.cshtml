
@{
    ViewData["Title"] = "Bölüm Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model SchoolWithDepartmentsDto

<div class="card shadow">
    <div class="card-header bg-info text-white">
        <h4>@Model.Name Bölümleri</h4>
    </div>
    <div class="card-body">
        <a href="/AdminDepartment/AddDepartment?schoolId=@Model.Id"
           class="btn btn-success mb-3">
            <i class="fas fa-plus"></i> Yeni Bölüm Ekle
        </a>

        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Bölüm ID</th>
                    <th>Bölüm Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model.Departments)
                {
                    <tr>
                        <td>@department.Id</td>
                        <td>@department.Name</td>
                        <td>
                            <a href="/AdminDepartment/Edit/@department.Id"
                               class="btn btn-sm btn-warning">Düzenle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
