@model UpdateRoomDto
@{
    ViewData["Title"] = "Edit Room";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Odayı Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Oda Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppUserId" class="control-label">Akademisyen Kullanıcı ID</label>
        <input asp-for="AppUserId" class="form-control" />
        <span asp-validation-for="AppUserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>
