@model CreateRoomDto
@{
    ViewData["Title"] = "Yeni Oda Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Oda Ekle</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Oda Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppUserId" class="control-label">Akademisyen Seç</label>
        <select asp-for="AppUserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "Value", "Text"))">
            <option value="">-- Seçiniz --</option>
        </select>
        <span asp-validation-for="AppUserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
