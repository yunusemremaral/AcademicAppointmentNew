@model RoomDetailDto
@{
    ViewData["Title"] = "Room Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Oda Detayları</h2>

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Oda Adı:</strong> @Model.Name</p>
        <p><strong>Kullanıcı ID:</strong> @Model.AppUserId</p>
        <p><strong>Kullanıcı Adı:</strong> @Model.UserFullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<a class="btn btn-secondary mt-3" asp-action="Index">Listeye Geri Dön</a>
