@{
    ViewData["Title"] = "Mesaj Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreateMessageDto

<div class="container mt-4">
    <h2>Yeni Mesaj Oluştur</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label>Gönderen</label>
            @Html.DropDownListFor(m => m.SenderId, (SelectList)ViewBag.SenderList, "Seçiniz", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Alıcı</label>
            @Html.DropDownListFor(m => m.ReceiverId, (SelectList)ViewBag.ReceiverList, "Seçiniz", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>İçerik</label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>
</div>