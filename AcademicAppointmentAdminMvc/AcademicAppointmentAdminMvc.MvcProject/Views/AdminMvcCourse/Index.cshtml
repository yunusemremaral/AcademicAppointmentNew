@model CourseWithFullDetailsViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Dersler</h2>

<form method="get" asp-action="Index" asp-controller="AdminMvcCourse" class="form-inline mb-3">
    @* Okullar *@
    @Html.DropDownList(
            "schoolId",
            Model.Schools,
            "Tüm Okullar",
            new { @class = "form-control mr-2" }
            )

    @* Bölümler *@
    @Html.DropDownList(
            "departmentId",
            Model.Departments,
            "Tüm Bölümler",
            new { @class = "form-control mr-2" }
            )

    @* Akademisyenler *@
    @Html.DropDownList(
            "instructorId",
            Model.Instructors,
            "Tüm Akademisyenler",
            new { @class = "form-control mr-2" }
            )

    <button type="submit" class="btn btn-primary">Filtrele</button>
    <a asp-action="Create"
       asp-route-schoolId="@Model.SelectedSchoolId"
       asp-route-departmentId="@Model.SelectedDepartmentId"
       asp-route-instructorId="@Model.SelectedInstructorId"
       class="btn btn-success ml-2">
        Yeni Ders Ekle
    </a>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Ders Adı</th>
            <th>Bölüm</th>
            <th>Okul</th>
            <th>Akademisyen</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Courses)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.DepartmentName</td>
                <td>@c.SchoolName</td>
                <td>@c.InstructorUserName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Sil</a>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
