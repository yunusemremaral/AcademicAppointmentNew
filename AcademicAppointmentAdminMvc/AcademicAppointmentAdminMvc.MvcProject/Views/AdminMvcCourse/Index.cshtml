
@{
    ViewData["Title"] = "Ders Listesi"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<GetCourseDto>


<h2>Ders Listesi</h2>
<a href="/AdminMvcCourse/AddCourse" class="btn btn-primary mb-3">Yeni Ders Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Bölüm</th>
            <th>Akademisyen</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.DepartmentName</td>
                <td>@course.InstructorName</td>
                <td>
                    <a href="/AdminMvcCourse/UpdateCourse/@course.Id" class="btn btn-sm btn-warning">Güncelle</a>
                    <a href="/AdminMvcCourse/DeleteCourse/@course.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
