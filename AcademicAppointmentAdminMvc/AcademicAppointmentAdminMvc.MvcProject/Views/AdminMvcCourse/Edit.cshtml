@model AcademicAppointmentShare.Dtos.CourseDtos.CourseGetByIdDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Ders Düzenle</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="DepartmentId" /> <!-- EKLENDİ -->
                <input type="hidden" asp-for="InstructorId" /> <!-- EKLENDİ -->

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Bölüm Bilgisi (Sadece Görüntüleme) -->
                <div class="form-group mb-3">
                    <label class="form-label">Bölüm</label>
                    <input class="form-control"
                           value="@Model.DepartmentId"
                           readonly />
                </div>

                <!-- Akademisyen Bilgisi (Sadece Görüntüleme) -->
                <div class="form-group mb-4">
                    <label class="form-label">Akademisyen</label>
                    <input class="form-control"
                           value="@Model.InstructorId"
                           readonly />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-2"></i>Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>