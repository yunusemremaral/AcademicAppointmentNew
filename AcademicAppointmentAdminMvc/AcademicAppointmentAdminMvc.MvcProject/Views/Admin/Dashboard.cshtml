<div class="row">
    <!-- Daily Line Chart (kaldı) -->
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card" style="min-height: 400px;">
            <div class="card-body">
                <h4 class="card-title">Son 7 Günün Randevuları</h4>
                <canvas id="dailyLineChart" style="height:300px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Appointment Status Bar Chart (yeni) -->
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card" style="min-height: 400px;">
            <div class="card-body">
                <h4 class="card-title">Randevuların Durum Dağılımı</h4>
                <canvas id="statusBarChart" style="height:300px;"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-xl-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-row justify-content-between">
                    <h4 class="card-title">Son 5 Kullanıcı</h4>
                </div>
                <div class="preview-list">
                    @foreach (var user in ViewBag.LatestUsers as List<UserDto>)
                    {
                        
                        var randomSayi = rnd.Next(1, 28); // 1-27 arası
                        var imagePath = $"/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/face{randomSayi}.jpg";

                        <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                                <img src="@imagePath" alt="image" class="rounded-circle" />
                            </div>
                            <div class="preview-item-content d-flex flex-grow">
                                <div class="flex-grow">
                                    <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                        <h6 class="preview-subject">@user.UserName</h6>
                                    </div>
                                    <p class="text-muted text-small">@user.Email</p>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 5 Okul</h4>
                <div class="preview-list">
                    @foreach (var school in ViewBag.LatestSchools as List<SchoolListDto>)
                    {
                        <div class="preview-item border-bottom">
                            <div class="icon icon-box-info">
                                <span class="mdi mdi-domain icon-item"></span>
                            </div>
                            <div class="preview-item-content d-flex flex-grow">
                                <div class="flex-grow">
                                    <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                        <h6 class="preview-subject">@school.Name</h6>
                                    </div>
                                    <p class="text-muted text-small">@school.Id</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-xl-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yapılacaklar Listesi</h4>
                <div class="add-items d-flex">
                    <input type="text" class="form-control todo-list-input" placeholder="Görev girin...">
                    <button class="add btn btn-primary todo-list-add-btn">Ekle</button>
                </div>
                <div class="list-wrapper">
                    <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                        <!-- Görevler buraya JavaScript ile eklenecek -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/chart.umd.js"></script>

    <script>
        // Daily Line Chart
        const dailyCounts = JSON.parse('@Html.Raw(ViewBag.DailyCountsJson)');
        const ctxLine = document.getElementById('dailyLineChart').getContext('2d');
        new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: Object.keys(dailyCounts),
                datasets: [{
                    label: 'Son 7 Gün Randevu Sayısı',
                    data: Object.values(dailyCounts),
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: true,
                    tension: 0.3,
                    pointRadius: 5
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: true, position: 'top' }
                },
                scales: {
                    x: { title: { display: true, text: 'Tarih' } },
                    y: { title: { display: true, text: 'Randevu Sayısı' }, beginAtZero: true }
                }
            }
        });

        // Appointment Status Bar Chart
        const statusCounts = JSON.parse('@Html.Raw(ViewBag.StatusCountsJson)');
        const ctxBar = document.getElementById('statusBarChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: Object.keys(statusCounts),
                datasets: [{
                    label: 'Randevu Durumları',
                    data: Object.values(statusCounts),
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Adet' }
                    },
                    x: {
                        title: { display: true, text: 'Durum' }
                    }
                }
            }
        });
    </script>

    <script>
        const input = document.querySelector(".todo-list-input");
        const addBtn = document.querySelector(".todo-list-add-btn");
        const list = document.querySelector(".todo-list");

        // Sayfa yüklendiğinde önceki görevleri getir
        window.addEventListener("load", () => {
            const storedItems = sessionStorage.getItem("todoItems");
            if (storedItems) {
                list.innerHTML = storedItems;
                attachRemoveEvents();
            }
        });

        // Yeni görev ekle
        addBtn.addEventListener("click", () => {
            const value = input.value.trim();
            if (value) {
                const li = document.createElement("li");
                li.innerHTML = `
                    <div class="form-check form-check-primary">
                        <label class="form-check-label">
                            <input class="checkbox" type="checkbox"> ${value}
                        </label>
                    </div>
                    <i class="remove mdi mdi-close-box"></i>
                `;
                list.prepend(li);
                input.value = "";
                saveList();
                attachRemoveEvents();
            }
        });

        // Listeyi kaydet
        function saveList() {
            sessionStorage.setItem("todoItems", list.innerHTML);
        }

        // Silme işlemini ayarla
        function attachRemoveEvents() {
            list.querySelectorAll(".remove").forEach(icon => {
                icon.onclick = () => {
                    icon.parentElement.remove();
                    saveList();
                };
            });
        }

        // Checkbox ile görev durumu değiştiğinde kaydet
        list.addEventListener("change", () => {
            saveList();
        });
    </script>

}
