@model UserCreateDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Yeni Kullanıcı Ekle";

}



<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="UserName" class="form-label">Kullanıcı Adı</label>
        <input type="text" id="UserName" name="UserName" class="form-control" required />
    </div>
    
    <div class="mb-3">
        <label for="Email" class="form-label">E-posta</label>
        <input type="email" id="Email" name="Email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Şifre</label>
        <input type="password" id="Password" name="Password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="SchoolId" class="form-label">Okul</label>
        <select id="SchoolId" name="SchoolId" class="form-select" required>
            <option value="">Seçiniz</option>
            <!-- Okul seçeneklerini burada doldurabilirsiniz -->
        </select>
    </div>

    <div class="mb-3">
        <label for="DepartmentId" class="form-label">Bölüm</label>
        <select id="DepartmentId" name="DepartmentId" class="form-select" required>
            <option value="">Seçiniz</option>
            <!-- Bölüm seçeneklerini burada doldurabilirsiniz -->
        </select>
    </div>

    <div class="mb-3">
        <label for="RoomId" class="form-label">Oda</label>
        <select id="RoomId" name="RoomId" class="form-select">
            <option value="">Seçiniz</option>
            <!-- Oda seçeneklerini burada doldurabilirsiniz -->
        </select>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="@Url.Action("Index", "AdminUserMvcController")" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


