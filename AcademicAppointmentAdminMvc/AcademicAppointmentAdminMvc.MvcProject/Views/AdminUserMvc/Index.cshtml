@model List<UserDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Kullanıcı Listesi";

}




<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Kullanıcı Listesi</h2>
        <a href="@Url.Action("Create", "AdminUserMvc")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Kullanıcı Ekle
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Roller</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>

                    <td>
                        <a href="@Url.Action("Details", "AdminUserMvc", new { id = user.Id })" class="btn btn-info btn-sm">Detay</a>
                        <a href="@Url.Action("Edit", "AdminUserMvc", new { id = user.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="@Url.Action("Delete", "AdminUserMvc", new { id = user.Id })" class="btn btn-danger btn-sm"
                           onclick="return confirm('Kullanıcıyı silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


